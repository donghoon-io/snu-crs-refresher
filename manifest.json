{
  "manifest_version": 2,

  "name": "SNU CRS Refresher",
  "description": "서울대학교 수강신청 웹사이트에서 '이미 수강신청 프로그램을 사용중입니다'라고 뜰 경우에 이를 해제해주는 extension",
  "version": "1.0",

  "icons": {
    "16": "images/logo_16.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },

  "permissions": [
    "tabs", "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "images/logo_128.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}